{% extends 'base.html.twig' %}

{% block title %}Maps List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Maps List</h1>
            <a href="{{ path('map_new') }}" class="btn btn-primary">Create new Map</a>
        </div>

        {% for notice in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ notice }}
            </div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                {% if maps|length > 0 %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Center</th>
                            <th>Zoom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for map in maps %}
                        <tr>
                            <td>{{ map.id }}</td>
                            <td>{{ map.title }}</td>
                            <td>{{ map.centerLat }}, {{ map.centerLng }}</td>
                            <td>{{ map.zoomLevel }}</td>
                            <td>
                                <a href="{{ path('map_show', {'id': map.id}) }}" class="btn btn-sm btn-info">Show</a>
                                <a href="{{ path('map_edit', {'id': map.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                <form method="post" action="{{ path('map_delete', {'id': map.id}) }}" onsubmit="return confirm('Are you sure you want to delete this map?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ map.id) }}">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    <div class="alert alert-info">
                        No maps found. <a href="{{ path('map_new') }}">Create your first map</a>.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %} 