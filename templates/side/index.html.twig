{% extends 'base.html.twig' %}

{% block title %}Sides Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Sides Management</h1>
            <a href="{{ path('side_new') }}" class="btn btn-primary">Create new Side</a>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Description</th>
                        <th>Linked Objects</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for side in sides %}
                    {% set geo_objects_count = side.geoObjects|length %}
                    <tr>
                        <td>{{ side.id }}</td>
                        <td>{{ side.name }}</td>
                        <td>
                            <span class="badge" style="background-color: {{ side.color }}; color: white;">{{ side.color }}</span>
                        </td>
                        <td>{{ side.description|length > 50 ? side.description|slice(0, 50) ~ '...' : side.description }}</td>
                        <td>
                            {% if geo_objects_count > 0 %}
                                <span class="badge bg-warning">{{ geo_objects_count }} object{{ geo_objects_count > 1 ? 's' : '' }}</span>
                            {% else %}
                                <span class="text-muted">No objects</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('side_show', {'id': side.id}) }}" class="btn btn-sm btn-info">Show</a>
                                <a href="{{ path('side_edit', {'id': side.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                
                                {% if geo_objects_count > 0 %}
                                    <button type="button" class="btn btn-sm btn-outline-danger" disabled title="Cannot delete: {{ geo_objects_count }} linked objects">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </button>
                                    <form method="post" action="{{ path('side_force_delete', {'id': side.id}) }}" onsubmit="return confirm('Are you sure you want to delete this side? All associated objects ({{ geo_objects_count }}) will be unassigned from it.');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('force_delete' ~ side.id) }}">
                                        <button class="btn btn-sm btn-danger" title="Force delete and unassign {{ geo_objects_count }} objects">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                {% else %}
                                    <form method="post" action="{{ path('side_delete', {'id': side.id}) }}" onsubmit="return confirm('Are you sure you want to delete this side?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ side.id) }}">
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No sides found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 