{% extends 'base.html.twig' %}

{% block title %}Sides Management{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12">
                <!-- Header Section -->
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                <i class="fas fa-users text-white"></i>
                            </div>
                        </div>
                        <div>
                            <h1 class="h3 mb-1 text-dark fw-bold">Sides Management</h1>
                            <p class="text-muted mb-0">Manage teams and factions for your tactical maps</p>
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('side_new') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>
                            Create New Side
                        </a>
                    </div>
                </div>

                <!-- Flash Messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show shadow-sm border-0 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-{% if label == 'success' %}check-circle{% elseif label == 'error' %}exclamation-triangle{% elseif label == 'warning' %}exclamation-circle{% else %}info-circle{% endif %} me-2"></i>
                                {{ message }}
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% if sides|length > 0 %}
                    <!-- Statistics Cards -->
                    <div class="row mb-4 justify-content-center">
                        <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="text-primary mb-2">
                                        <i class="fas fa-users fa-2x"></i>
                                    </div>
                                    <h5 class="card-title">{{ sides|length }}</h5>
                                    <p class="card-text text-muted">Total Sides</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="text-info mb-2">
                                        <i class="fas fa-chart-line fa-2x"></i>
                                    </div>
                                    <h5 class="card-title">
                                        {% set activeSides = 0 %}
                                        {% for side in sides %}
                                            {% if side.geoObjects|length > 0 %}
                                                {% set activeSides = activeSides + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ activeSides }}
                                    </h5>
                                    <p class="card-text text-muted">Active Sides</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sides Grid -->
                    <div class="row">
                        {% for side in sides %}
                            {% set geo_objects_count = side.geoObjects|length %}
                            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
                                <div class="card border-0 shadow-sm h-100 side-card" data-side-id="{{ side.id }}">
                                    <!-- Color Header -->
                                    <div class="card-header border-0 p-0">
                                        <div class="position-relative">
                                            <div class="side-color-header" style="background: linear-gradient(135deg, {{ side.color }}, {{ side.color }}88); height: 80px;"></div>
                                            <div class="position-absolute top-0 end-0 p-3">
                                                <span class="badge bg-white text-dark shadow-sm">#{{ side.id }}</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Card Body -->
                                    <div class="card-body d-flex flex-column">
                                        <div class="mb-2">
                                            <h5 class="card-title fw-bold mb-2">{{ side.name }}</h5>
                                        </div>
                                        
                                        <div class="flex-grow-1">
                                            {% if side.description %}
                                                <p class="card-text text-muted small">
                                                    {{ side.description|length > 80 ? side.description|slice(0, 80) ~ '...' : side.description }}
                                                </p>
                                            {% else %}
                                                <p class="card-text text-muted small fst-italic">No description available</p>
                                            {% endif %}
                                        </div>
                                        
                                        <!-- Linked Objects Info -->
                                        <div class="mt-2 mb-3">
                                            {% if geo_objects_count > 0 %}
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-map-marker-alt text-success me-2"></i>
                                                    <span class="badge bg-success">{{ geo_objects_count }} object{{ geo_objects_count > 1 ? 's' : '' }}</span>
                                                </div>
                                            {% else %}
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-circle text-muted me-2"></i>
                                                    <span class="text-muted small">No linked objects</span>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <!-- Card Footer with Actions -->
                                    <div class="card-footer bg-transparent border-0 pt-0">
                                        <div class="d-flex gap-2 flex-wrap mb-2">
                                            <a href="{{ path('side_show', {'id': side.id}) }}" class="btn btn-sm btn-outline-info flex-grow-1">
                                                <i class="fas fa-eye me-1"></i>
                                                View
                                            </a>
                                            <a href="{{ path('side_edit', {'id': side.id}) }}" class="btn btn-sm btn-outline-primary flex-grow-1">
                                                <i class="fas fa-edit me-1"></i>
                                                Edit
                                            </a>
                                        </div>
                                        
                                        <div>
                                            {% if geo_objects_count > 0 %}
                                                <form method="post" action="{{ path('side_force_delete', {'id': side.id}) }}" onsubmit="return confirm('Are you sure you want to delete this side? All associated objects ({{ geo_objects_count }}) will be unassigned from it.');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('force_delete' ~ side.id) }}">
                                                    <button class="btn btn-sm btn-danger w-100" title="Force delete and unassign {{ geo_objects_count }} objects">
                                                        <i class="fas fa-shield-alt me-1"></i>
                                                        <i class="fas fa-trash-alt me-1"></i>
                                                        Force Delete
                                                    </button>
                                                </form>
                                            {% else %}
                                                <form method="post" action="{{ path('side_delete', {'id': side.id}) }}" onsubmit="return confirm('Are you sure you want to delete this side?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ side.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger w-100">
                                                        <i class="fas fa-trash-alt me-1"></i>
                                                        Delete
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                {% else %}
                    <!-- Empty State -->
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-8 col-lg-6">
                            <div class="card border-0 shadow-sm text-center py-5">
                                <div class="card-body">
                                    <div class="mb-4">
                                        <i class="fas fa-users fa-4x text-muted"></i>
                                    </div>
                                    <h4 class="card-title text-muted mb-3">No Sides Found</h4>
                                    <p class="card-text text-muted mb-4">
                                        Get started by creating your first side. Sides represent teams or factions in your tactical maps.
                                    </p>
                                    <a href="{{ path('side_new') }}" class="btn btn-primary btn-lg">
                                        <i class="fas fa-plus me-2"></i>
                                        Create Your First Side
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <style>
        .side-card {
            transition: all 0.3s ease;
            border-radius: 12px;
            overflow: hidden;
        }
        
        .side-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }
        
        .side-color-header {
            border-radius: 12px 12px 0 0;
            position: relative;
        }
        
        .side-color-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1));
        }
        
        .btn {
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-1px);
        }
        
        .card {
            border-radius: 12px;
        }
        
        .alert {
            border-radius: 12px;
        }
        
        .badge {
            font-weight: 500;
        }
        
        @media (max-width: 768px) {
            .container-fluid {
                padding-left: 1rem;
                padding-right: 1rem;
            }
            
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }
            
            .d-flex.justify-content-between > div:last-child {
                align-self: stretch;
            }
            
            .btn-lg {
                width: 100%;
            }
        }
        
        @media (max-width: 576px) {
            .side-card .d-flex.gap-2 {
                flex-direction: column;
            }
            
            .side-card .d-flex.gap-2 .btn {
                flex-grow: 1;
            }
        }
    </style>
{% endblock %} 