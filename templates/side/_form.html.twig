{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

<!-- Name and Color Row -->
<div class="row g-4 mb-4">
    <div class="col-12 col-md-8">
        <div class="form-floating">
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': 'Enter side name'
                }
            }) }}
            <label for="{{ form.name.vars.id }}" class="form-label">
                <i class="fas fa-tag text-primary me-1"></i>
                Side Name
            </label>
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="form-group">
            <label for="{{ form.color.vars.id }}" class="form-label fw-semibold mb-2">
                <i class="fas fa-palette text-primary me-1"></i>
                Side Color
            </label>
            <div class="d-flex align-items-center">
                {{ form_widget(form.color, {
                    'attr': {
                        'class': 'form-control form-control-color form-control-lg',
                        'style': 'width: 70px; height: 50px;'
                    }
                }) }}
                <div class="ms-3">
                    <small class="text-muted">
                        Display color for map objects
                    </small>
                </div>
            </div>
            {{ form_errors(form.color) }}
        </div>
    </div>
</div>

<!-- Description Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="form-floating">
            {{ form_widget(form.description, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Enter description (optional)',
                    'rows': '4',
                    'style': 'min-height: 120px;'
                }
            }) }}
            <label for="{{ form.description.vars.id }}" class="form-label">
                <i class="fas fa-align-left text-primary me-1"></i>
                Description (Optional)
            </label>
            {{ form_errors(form.description) }}
        </div>
    </div>
</div>

<!-- Submit Button -->
<div class="d-grid">
    <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-{% if button_label is defined and 'Update' in button_label %}save{% else %}plus{% endif %} me-2"></i>
        {{ button_label|default('Create Side') }}
    </button>
</div>

{{ form_end(form) }} 