{% extends 'base.html.twig' %}

{% block title %}New Side{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-success rounded-circle d-flex align-items-center justify-content-center form-icon">
                        <i class="fas fa-plus fa-xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-0 fw-bold">Create New Side</h1>
                        <p class="text-muted mb-0">Add a new side for your tactical maps</p>
                    </div>
                </div>
                
                <!-- Navigation Breadcrumb -->
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('side_index') }}">Sides</a></li>
                        <li class="breadcrumb-item active">New Side</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <!-- Form Section -->
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0">
                        <h5 class="mb-0">
                            <i class="fas fa-users me-2"></i>
                            Side Information
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        {{ include('side/_form.html.twig') }}
                    </div>
                </div>
                
                <!-- Action Button -->
                <div class="row mt-4">
                    <div class="col-12">
                        <a href="{{ path('side_index') }}" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 