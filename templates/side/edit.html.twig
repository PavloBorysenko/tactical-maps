{% extends 'base.html.twig' %}

{% block title %}Edit Side{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-6">
                <!-- Header Section -->
                <div class="d-flex align-items-center mb-4">
                    <div class="me-3">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="fas fa-edit text-white"></i>
                        </div>
                    </div>
                    <div>
                        <h1 class="h3 mb-1 text-dark fw-bold">Edit Side</h1>
                        <p class="text-muted mb-0">{{ side.name }}</p>
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <!-- Main Form Card -->
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-white border-bottom-0 pt-4 pb-3">
                            <h5 class="card-title mb-0 text-dark fw-semibold">
                                <i class="fas fa-cog text-primary me-2"></i>
                                Side Configuration
                            </h5>
                        </div>
                        <div class="card-body px-4 py-4">
                            <!-- Name and Color Row -->
                            <div class="row g-4 mb-4">
                                <div class="col-12 col-md-8">
                                    <div class="form-floating">
                                        {{ form_widget(form.name, {
                                            'attr': {
                                                'class': 'form-control form-control-lg',
                                                'placeholder': 'Enter side name'
                                            }
                                        }) }}
                                        <label for="{{ form.name.vars.id }}" class="form-label">
                                            <i class="fas fa-tag text-primary me-1"></i>
                                            Side Name
                                        </label>
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                                <div class="col-12 col-md-4">
                                    <div class="form-group">
                                        <label for="{{ form.color.vars.id }}" class="form-label fw-semibold mb-2">
                                            <i class="fas fa-palette text-primary me-1"></i>
                                            Side Color
                                        </label>
                                        <div class="d-flex align-items-center">
                                            {{ form_widget(form.color, {
                                                'attr': {
                                                    'class': 'form-control form-control-color form-control-lg',
                                                    'style': 'width: 70px; height: 50px; border-radius: 8px;'
                                                }
                                            }) }}
                                            <div class="ms-3">
                                                <small class="text-muted">
                                                    Display color for map objects
                                                </small>
                                            </div>
                                        </div>
                                        {{ form_errors(form.color) }}
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Description Section -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.description, {
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Enter description (optional)',
                                                'rows': '4',
                                                'style': 'min-height: 120px;'
                                            }
                                        }) }}
                                        <label for="{{ form.description.vars.id }}" class="form-label">
                                            <i class="fas fa-align-left text-primary me-1"></i>
                                            Description (Optional)
                                        </label>
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card shadow-sm border-0">
                        <div class="card-body px-4 py-3">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-6 mb-3 mb-md-0">
                                    <div class="d-flex flex-wrap gap-2">
                                        <a href="{{ path('side_index') }}" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-1"></i>
                                            Back to List
                                        </a>
                                        <a href="{{ path('side_show', {'id': side.id}) }}" class="btn btn-outline-info">
                                            <i class="fas fa-eye me-1"></i>
                                            View Details
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                                        {{ include('side/_delete_form.html.twig') }}
                                        <button type="submit" class="btn btn-primary btn-lg px-4">
                                            <i class="fas fa-save me-2"></i>
                                            Save Changes
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <style>
        .form-floating > .form-control:focus,
        .form-floating > .form-control:not(:placeholder-shown) {
            padding-top: 1.625rem;
            padding-bottom: 0.625rem;
        }
        
        .form-floating > label {
            opacity: 0.7;
            font-weight: 500;
        }
        
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            opacity: 1;
            transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
        }
        
        .card {
            border-radius: 12px;
            transition: all 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
        }
        
        .btn {
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-1px);
        }
        
        .form-control-color {
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }
        
        .form-control-color:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        
        @media (max-width: 768px) {
            .container-fluid {
                padding-left: 1rem;
                padding-right: 1rem;
            }
            
            .card-body {
                padding-left: 1.5rem !important;
                padding-right: 1.5rem !important;
            }
        }
    </style>
{% endblock %} 