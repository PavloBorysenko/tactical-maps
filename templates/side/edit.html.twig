{% extends 'base.html.twig' %}

{% block title %}Edit Side{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Side: {{ side.name }}</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
         <input type="hidden" name="side[_token]" value="{{ csrf_token('side') }}">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.color) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div>
                        <a href="{{ path('side_index') }}" class="btn btn-secondary">Back to list</a>
                        <a href="{{ path('side_show', {'id': side.id}) }}" class="btn btn-info">Show</a>
                    </div>
                    <div>
                        {{ include('side/_delete_form.html.twig') }}
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %} 