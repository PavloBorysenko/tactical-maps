{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Admin Navigation</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('map_index') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-map"></i> Maps
                    </a>
                    <a href="{{ path('side_index') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Sides
                    </a>
                    <a href="{{ path('observer_index') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-eye"></i> Observers
                    </a>
                    <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Admin Dashboard</h1>
                <div>
                    <span class="badge badge-info">Welcome, {{ app.user.email }}</span>
                </div>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            {% endfor %}

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <a href="{{ path('map_index') }}" class="btn btn-outline-primary btn-block">
                                        <i class="fas fa-map"></i><br>
                                        All Maps
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{ path('map_new') }}" class="btn btn-outline-primary btn-block">
                                        <i class="fas fa-plus"></i><br>
                                        New Map
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{ path('side_index') }}" class="btn btn-outline-success btn-block">
                                        <i class="fas fa-users"></i><br>
                                        All Sides
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{ path('side_new') }}" class="btn btn-outline-success btn-block">
                                        <i class="fas fa-plus"></i><br>
                                        New Side
                                    </a>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-3">
                                    <a href="{{ path('observer_index') }}" class="btn btn-outline-info btn-block">
                                        <i class="fas fa-eye"></i><br>
                                        All Observers
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{ path('observer_new') }}" class="btn btn-outline-info btn-block">
                                        <i class="fas fa-plus"></i><br>
                                        New Observer
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <div class="alert alert-info mb-0">
                                        <small>
                                            <i class="fas fa-info-circle"></i>
                                            <strong>Observers</strong> are users who can view maps with specific permissions using access tokens.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 