{% extends 'base.html.twig' %}

{% block title %}{{ observer.name }} - Observer Details{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('observerManagement') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            {% if observer.icon %}
                                <img src="{{ observer.icon }}" alt="Observer icon" class="me-2 rounded" style="width: 32px; height: 32px;">
                            {% endif %}
                            {{ observer.name }}
                        </h4>
                        <span class="badge bg-info">Observer</span>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th width="150">Name</th>
                                    <td>{{ observer.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>
                                        {% if observer.description %}
                                            {{ observer.description }}
                                        {% else %}
                                            <span class="text-muted">No description</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Icon</th>
                                    <td>
                                        {% if observer.icon %}
                                            <img src="{{ observer.icon }}" alt="Observer icon" class="rounded" style="width: 48px; height: 48px;">
                                        {% else %}
                                            <span class="text-muted">No icon</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Map</th>
                                    <td>
                                        <a href="{{ path('map_show', {'id': observer.map.id}) }}" class="text-decoration-none">
                                            <span class="badge bg-primary">{{ observer.map.title }}</span>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Access Token</th>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control font-monospace" id="tokenInput" 
                                                   value="{{ observer.accessToken }}" readonly>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToken()" title="Copy token">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Observer URL</th>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <code class="me-2">{{ url('observer_viewer', {'token': observer.accessToken}) }}</code>
                                            <a href="{{ path('observer_viewer', {'token': observer.accessToken}) }}" 
                                               class="btn btn-outline-success btn-sm" target="_blank" title="Open observer view">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Created</th>
                                    <td>{{ observer.createdAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Updated</th>
                                    <td>{{ observer.updatedAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h5>Rules Configuration</h5>
                    </div>
                    <div class="card-body">
                        {% if observer.rules %}
                            <pre class="bg-light p-3 rounded"><code>{{ observer.rules|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                        {% else %}
                            <p class="text-muted">No rules configured</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('observer_edit', {'id': observer.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit Observer
                            </a>
                            
                            <a href="{{ path('observer_viewer', {'token': observer.accessToken}) }}" 
                               class="btn btn-success" target="_blank">
                                <i class="fas fa-map"></i> Open Map View
                            </a>
                            
                            <hr>
                            
                            <button class="btn btn-outline-danger" 
                                    onclick="confirmDelete('{{ path('observer_delete', {'id': observer.id}) }}', '{{ observer.name }}')">
                                <i class="fas fa-trash"></i> Delete Observer
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h6>Observer Statistics</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="border-end">
                                    <h4 class="mb-1">{{ observer.rules|length }}</h4>
                                    <small class="text-muted">Rules</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="mb-1">1</h4>
                                <small class="text-muted">Map</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('observer_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
{% endblock %} 