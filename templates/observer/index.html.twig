{% extends 'base.html.twig' %}

{% block title %}Observers List{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('confirmDelete') }}
    {{ encore_entry_script_tags('observerManagement') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Observers List</h1>
            <a href="{{ path('observer_new') }}" class="btn btn-primary">Create new Observer</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <!-- Map Filter -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" class="row g-3 align-items-end">
                    <div class="col-md-8">
                        <label for="map" class="form-label">Filter by Map</label>
                        <select name="map" id="map" class="form-select">
                            <option value="">All Maps</option>
                            {% for map in maps %}
                                <option value="{{ map.id }}" {{ selectedMap and selectedMap.id == map.id ? 'selected' : '' }}>
                                    {{ map.title }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                        {% if selectedMap %}
                            <a href="{{ path('observer_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>

        <!-- Observers Table -->
        {% if observers|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-users"></i> 
                        Observers 
                        <span class="badge bg-primary">{{ observers|length }}</span>
                        {% if selectedMap %}
                            <small class="text-muted">for {{ selectedMap.title }}</small>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Observer</th>
                                    <th>Map</th>
                                    <th>Access Token</th>
                                    <th>Rules</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for observer in observers %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if observer.icon %}
                                                    <img src="{{ observer.icon }}" alt="Observer icon" 
                                                         class="me-2 rounded" style="width: 32px; height: 32px;">
                                                {% else %}
                                                    <div class="me-2 bg-secondary rounded d-flex align-items-center justify-content-center" 
                                                         style="width: 32px; height: 32px;">
                                                        <i class="fas fa-eye text-white"></i>
                                                    </div>
                                                {% endif %}
                                                <div>
                                                    <strong>{{ observer.name }}</strong>
                                                    {% if observer.description %}
                                                        <br><small class="text-muted">{{ observer.description|length > 50 ? observer.description|slice(0, 50) ~ '...' : observer.description }}</small>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ observer.map.title }}</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <code class="me-2 text-truncate" style="max-width: 200px;">{{ observer.accessToken }}</code>
                                                <button class="btn btn-outline-primary btn-sm copy-token-btn" 
                                                        data-token="{{ observer.accessToken }}"
                                                        title="Copy token">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td>
                                            {% if observer.rules|length > 0 %}
                                                <span class="badge bg-success">{{ observer.rules|length }} rules</span>
                                            {% else %}
                                                <span class="badge bg-secondary">No rules</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <small>{{ observer.createdAt|date('Y-m-d H:i') }}</small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('observer_show', {'id': observer.id}) }}" 
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('observer_edit', {'id': observer.id}) }}" 
                                                   class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/observer/{{ observer.accessToken }}" 
                                                   class="btn btn-outline-success btn-sm" 
                                                   target="_blank" 
                                                   title="Open observer view">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                                <button class="btn btn-outline-danger btn-sm" 
                                                        onclick="confirmDelete('{{ path('observer_delete', {'id': observer.id}) }}', '{{ observer.name }}')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                {% if selectedMap %}
                    No observers found for the selected map "{{ selectedMap.title }}".
                {% else %}
                    No observers created yet.
                {% endif %}
                <a href="{{ path('observer_new') }}" class="alert-link">Create the first observer</a>
            </div>
        {% endif %}
    </div>
{% endblock %} 