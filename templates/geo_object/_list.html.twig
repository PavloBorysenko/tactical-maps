<div class="geo-objects-container">
    <h3 class="mb-3">Geo Objects</h3>
    
    <div class="geo-objects-list">
        <div class="list-group">
            <!-- Loading indicator - will be replaced by JavaScript -->
            <div class="alert alert-info" id="geo-objects-loading">
                <i class="fas fa-spinner fa-spin me-2"></i> Loading geo objects...
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal - kept for backward compatibility if needed -->
<div class="modal fade" id="delete-geo-modal" tabindex="-1" aria-labelledby="delete-geo-modal-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-geo-modal-label">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this geo object? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-danger" id="confirm-delete-geo-btn">Delete</button>
            </div>
        </div>
    </div>
</div> 