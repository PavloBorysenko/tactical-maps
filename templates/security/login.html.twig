{% extends 'base.html.twig' %}

{% block title %}Admin Login{% endblock %}

{% block body %}
<div class="login-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card login-card shadow-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-2">
                            <i class="fas fa-shield-alt"></i> Admin Login
                        </h3>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle"></i> You are logged in as {{ app.user.userIdentifier }}
                                <a href="{{ path('app_logout') }}" class="alert-link">Logout</a>
                            </div>
                        {% endif %}

                        <form method="post">
                            <div class="form-group mb-3">
                                <label class="small mb-1" for="inputEmail">
                                    <i class="fas fa-envelope"></i> Email Address
                                </label>
                                <input type="email" 
                                       value="{{ last_username }}" 
                                       name="email" 
                                       id="inputEmail" 
                                       class="form-control" 
                                       autocomplete="email" 
                                       required 
                                       autofocus
                                       placeholder="Enter your email">
                            </div>
                            
                            <div class="form-group mb-3">
                                <label class="small mb-1" for="inputPassword">
                                    <i class="fas fa-lock"></i> Password
                                </label>
                                <input type="password" 
                                       name="password" 
                                       id="inputPassword" 
                                       class="form-control" 
                                       autocomplete="current-password" 
                                       required
                                       placeholder="Enter your password">
                            </div>

                            <div class="form-check mb-3">
                                <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
                                <label class="form-check-label" for="rememberMe">
                                    <i class="fas fa-user-check"></i> Remember me
                                </label>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    <i class="fas fa-sign-in-alt"></i> Sign In
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small text-muted">
                            <i class="fas fa-shield-alt"></i> Tactical Maps Admin Panel
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
